<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userinterface.fragment.settings.SettingsOverviewFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_settings_save"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_settings_buddy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/settings_buddy_name"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_settings_buddy_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_user_name" />

            <TextView
                android:id="@+id/tv_settings_buddy_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/settings_buddy_image"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/hguideline1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_buddy_name" />

            <TextView
                android:id="@+id/tv_settings_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/settings_user_name"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_settings_buddy_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/input_user_name"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:maxLength="20"
                android:singleLine="true"
                app:layout_constraintBottom_toTopOf="@+id/input_buddy_name"
                app:layout_constraintStart_toStartOf="@+id/vguideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread" />

            <EditText
                android:id="@+id/input_buddy_name"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:maxLength="20"
                android:singleLine="true"
                app:layout_constraintBottom_toTopOf="@+id/tv_settings_buddy_image_text"
                app:layout_constraintStart_toStartOf="@+id/vguideline"
                app:layout_constraintTop_toBottomOf="@+id/input_user_name" />

            <TextView
                android:id="@+id/tv_settings_buddy_image_text"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"

                android:layout_marginBottom="16dp"
                android:text="..."
                app:layout_constraintBottom_toTopOf="@+id/hguideline1"
                app:layout_constraintStart_toStartOf="@+id/vguideline"
                app:layout_constraintTop_toBottomOf="@+id/input_buddy_name" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hguideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hguideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hguideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintGuide_percent="0.6" />

            <ImageButton
                android:id="@+id/iv_charlie_1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/blue_smile"
                app:layout_constraintBottom_toTopOf="@+id/hguideline2"
                app:layout_constraintEnd_toStartOf="@+id/iv_charlie_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hguideline1" />

            <ImageButton
                android:id="@+id/iv_charlie_2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/green_smile_glasses"
                app:layout_constraintBottom_toTopOf="@+id/hguideline2"
                app:layout_constraintEnd_toStartOf="@+id/iv_charlie_3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_charlie_1"
                app:layout_constraintTop_toTopOf="@+id/hguideline1" />

            <ImageButton
                android:id="@+id/iv_charlie_3"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/pink_charlie_relieved"
                app:layout_constraintBottom_toTopOf="@+id/hguideline2"
                app:layout_constraintEnd_toStartOf="@+id/iv_charlie_4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_charlie_2"
                app:layout_constraintTop_toTopOf="@+id/hguideline1" />

            <ImageButton
                android:id="@+id/iv_charlie_4"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/yellow_charlie_grinning"
                app:layout_constraintBottom_toTopOf="@+id/hguideline2"
                app:layout_constraintEnd_toStartOf="@+id/iv_charlie_5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_charlie_3"
                app:layout_constraintTop_toTopOf="@+id/hguideline1" />

            <ImageButton
                android:id="@+id/iv_charlie_5"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/orange_charlie_goofy"
                app:layout_constraintBottom_toTopOf="@+id/hguideline2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_charlie_4"
                app:layout_constraintTop_toTopOf="@+id/hguideline1" />

            <!-- ############################################# -->
            <TextView
                android:id="@+id/tv_settings_permissions_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/settings_permissions_header"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_settings_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hguideline2" />

            <TextView
                android:id="@+id/tv_settings_microphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/settings_microphone"
                app:layout_constraintBottom_toTopOf="@+id/sw_microphone"
                app:layout_constraintEnd_toStartOf="@+id/tv_settings_camera"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_permissions_header" />

            <Switch
                android:id="@+id/sw_microphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="false"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/tv_settings_permissions_info"
                app:layout_constraintEnd_toStartOf="@+id/sw_camera"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_microphone" />

            <!-- ############################################# -->

            <TextView
                android:id="@+id/tv_settings_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/settings_camera"
                app:layout_constraintBottom_toTopOf="@+id/sw_camera"
                app:layout_constraintEnd_toStartOf="@+id/tv_settings_gps"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_settings_microphone"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_permissions_header" />

            <Switch
                android:id="@+id/sw_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="false"
                app:layout_constraintBottom_toTopOf="@+id/tv_settings_permissions_info"
                app:layout_constraintEnd_toStartOf="@+id/sw_gps"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/sw_microphone"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_camera" />

            <!-- ############################################# -->

            <TextView
                android:id="@+id/tv_settings_gps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/settings_gps"
                app:layout_constraintBottom_toTopOf="@+id/sw_gps"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_settings_camera"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_permissions_header" />

            <Switch
                android:id="@+id/sw_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:clickable="false"
                app:layout_constraintBottom_toTopOf="@+id/tv_settings_permissions_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/sw_camera"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_gps" />

            <!-- ############################################# -->

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hguideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.94" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vguideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <TextView
                android:id="@+id/tv_settings_permissions_info"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:text="@string/settings_permissions_info"
                android:textSize="11dp"
                app:layout_constraintBottom_toTopOf="@+id/hguideline3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sw_camera" />

            <TextView
                android:id="@+id/tv_settings_intervention_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/settings_intervation_frequency"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hguideline3" />

            <TextView
                android:id="@+id/tv_settings_intervention_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/settings_intervation_frequency_notice"
                android:textSize="11dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_intervention_header" />

            <TextView
                android:id="@+id/tv_settings_interval_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/settings_interval"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_intervention_notice" />

            <TextView
                android:id="@+id/tv_settings_frequency_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/settings_frequency"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/vguideline2"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_intervention_notice" />

            <TextView
                android:id="@+id/tv_settings_interval_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="@string/settings_interval_remark"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_interval_header" />

            <TextView
                android:id="@+id/tv_settings_frequency_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/settings_frequency_remark"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/vguideline2"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_frequency_header" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vguideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_settings_interval"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                app:hintEnabled="true"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_interval_notice">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_settings_interval"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_settings_frequency"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:hintEnabled="true"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/vguideline2"
                app:layout_constraintTop_toBottomOf="@+id/tv_settings_frequency_notice">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_settings_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_settings_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp"
        android:backgroundTint="@color/colorAccent"
        android:text="save"
        android:textColor="@color/textcolor_white"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>